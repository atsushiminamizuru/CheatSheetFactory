<p id="notice"><%= flash[:notice] %></p>

<main>
<!--ここまでheaderとボディコンテンツの間-->
    <p></p>
    <div class="container px-5 px-sm-0">
      
      <div class="row">
<!--全部の箱完成、並べる-->
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag current_user.get_profile_image(100, 100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(current_user.id),class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <div class="row">
            <%= link_to new_sheet_path,class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>ChatSheet一覧</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>プロフィール画像</th>
                <th>投稿者名</th>
                <th>言語</th>
                <th>タイトル</th>
              </tr>
            </thead>
            <tbody>
            <% @sheets.each do |sheet| %>
              <tr>
                <td><%= link_to user_path(sheet.user_id) do %>
                    <%= image_tag sheet.user.get_profile_image(80, 80) %>
                    <% end %>
                </td>
                <td><%= link_to user_path(sheet.user_id) do %>
                    <%= sheet.user.name %>
                    <% end %>
                </td>
                <td><%= sheet.genre.name %></td>
                <td><%= link_to sheet_path(sheet.id) do %>
                    <%= sheet.title %>
                    <% end %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
</main>