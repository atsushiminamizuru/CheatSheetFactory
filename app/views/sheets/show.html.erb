<p>><%= flash[:notice] %></p>
<main>
<!--ここまでheaderとボディコンテンツの間-->
    <p></p>
    <div class="container px-5 px-sm-0">
      
      <div class="row">
<!--全部の箱完成、並べる-->
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag current_user.get_profile_image(100, 100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to edit_user_path(current_user.id),class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
          <div class="row">
            <%= link_to new_sheet_path,class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>CheatSheet詳細</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>プロフィール画像</th>
                <th>投稿者名</th>
                <th>言語</th>
                <th>タイトル</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@sheet.user.id) do %>
                    <%= image_tag @sheet.user.get_profile_image(100, 100) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to user_path(@sheet.user.id) do %>
                    <%= @sheet.user.name %>
                  <% end %>
                </td>
                <td><%= @sheet.genre.name %></td>
                <td><%= @sheet.title %></td>
                <% if @sheet.user_id == current_user.id %>
                <td>
                  <%= link_to "編集",edit_sheet_path(@sheet.id),class: "btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "削除",sheet_path,class: "btn btn-sm btn-danger",method: :delete,"data-confirm" => "本当に消しますか？" %>
                </td>
                <% end %>
              </tr>
            </tbody>
          </table>
          <%= @sheet.content %>
          <%= image_tag @sheet.image.variant(resize_to_limit: [700, 700]) %>
          </li>
        </div>

      </div>
    </div>
</main>
