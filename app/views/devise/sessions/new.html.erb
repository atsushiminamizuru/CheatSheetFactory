<main class="mb-auto">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
        <h5 class="text-center text-dark bg-light py-4 mb-0">ユーザーログイン</h5>
        <div class="form-body p-4">
          <div class="mx-auto text-center">
            <p>メールアドレスとパスワード<br>を入力してください。</p>
          </div>
          <%= form_with model: @user, url: user_session_path do |f| %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
              </div>
              <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control", required: true %>
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
              </div>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control", required: true %>
            </div>
            <%= f.submit "ログイン", class: "btn btn-lg btn-block btn-info mt-5", "data-disable-with": "ログイン中...." %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
