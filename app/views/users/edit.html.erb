  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1  class="text-center">ユーザー情報編集</h1><br>
        <%= render "devise/shared/error_messages", resource: @user %>
        <%= form_with model:@user do |f| %>
        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像（任意）" %><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :name, "名前(必須)" %><br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "自己紹介(任意)" %><br>
          <%= f.text_area :introduction, rows: 8, class: "form-control" %>
        </div>
        <div class="form-group text-center">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
